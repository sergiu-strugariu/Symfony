<div class="faq-wrapper">
    <div class="inner">
        <div class="accordion" id="accordionFaq">
            {% for faq in faqs %}
            <div class="card">
                <div class="card-header" id="heading-{{ loop.index }}">
                    <h2 class="mb-0" data-toggle="collapse" data-target="#collapse-{{ loop.index }}">
                        {{ faq.translation(default_locale).question }}
                    </h2>
                </div>

                <div id="collapse-{{ loop.index }}" class="collapse" data-parent="#accordionFaq">
                    <div class="card-body">
                        {{ faq.translation(default_locale).answer|raw }}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>