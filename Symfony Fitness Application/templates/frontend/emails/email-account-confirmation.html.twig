{% extends 'layout_email.html.twig' %}

{% block content %}
    <tr>
        <td style="font-family: 'Helvetica Neue LT Pro', sans-serif; font-size: 16pt; letter-spacing:0.525px; color: #465686; padding: 40px 50px 15px 50px; font-weight:700;">
            {{ 'mails.salute'|trans }} {{ name }},
        </td>
    </tr>
    <tr>
        <td style="padding: 0px 50px 18px 50px; font-family: 'Helvetica Neue LT Pro', sans-serif; color: #465686; font-size: 12pt; font-weight: 400; letter-spacing:0.4px;">
            {{ 'mails.email_account_confirmation.description'|trans|raw }}
        </td>
    </tr>
    <tr>
        <td align="left" valign="middle" style="padding: 11px 50px;">
            <table align="left"  cellpadding="0" cellspacing="0" align="left" border="0" role="presentation">
                <tr align="left" >
                    <td align="left"  style=" font-family: 'Helvetica Neue LT Pro', sans-serif;  text-align: center; ">
                        <p align="left" style="padding: 0; margin: 0;">
                            <a target="_blank" href="{{ generatedUrl }}" style="display: inline-block; font-weight: 700; font-size: 12pt; letter-spacing:0.4px; padding: 12px 14px; text-transform: uppercase; background-color: #01b3a7; color: #fff; text-decoration: none;">
                                {{ 'mails.email_account_confirmation.confirm_button'|trans }}
                            </a>
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="padding: 20px 50px 14px 50px; font-family: 'Helvetica Neue LT Pro', sans-serif; color: #465686; font-size: 12pt; font-weight: 400; letter-spacing:0.4px;">
            {{ 'mails.email_account_confirmation.security'|trans }}
        </td>
    </tr>
    <tr>
        <td style="padding: 0px 50px 40px 50px; font-family: 'Helvetica Neue LT Pro', sans-serif; color: #465686; font-size: 12pt; font-weight: 400; letter-spacing:0.4px;">
            {{ 'mails.greetings'|trans|raw }}
        </td>
    </tr>
{% endblock %}
