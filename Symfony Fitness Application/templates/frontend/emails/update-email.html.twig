{% extends 'layout_email.html.twig' %}

{% block content %}
    <tr>
        <td style="font-family: 'Helvetica Neue LT Pro', sans-serif; font-size: 16pt; letter-spacing:0.525px; color: #465686; padding: 40px 50px 15px 50px ; font-weight:700;">{{ 'mails.salute'|trans }} {{ user.firstName }},</td>
    </tr>
    <tr>
        <td style="padding: 0px 50px 20px 50px; font-family: 'Helvetica Neue LT Pro', sans-serif; color: #465686; font-size: 12pt; font-weight: 400; letter-spacing:0.4px;">
            {{ 'mails.email_update.description'|trans }}
        </td>
    </tr>
    <tr>
        <td align="left" valign="middle" style="padding: 11px 50px;">
            <table cellpadding="0" cellspacing="0" align="left" border="0" role="presentation">
                <tr align="left">
                    <td align="left" style=" font-family: 'Helvetica Neue LT Pro', sans-serif;  text-align: center;">
                        <p align="left" style="padding: 0; margin: 0;">
                            <a target="_blank" href="{{ confirmEmailUpdateUrl }}" style="display: inline-block; font-size: 12pt; letter-spacing:0.4px; padding: 12px 14px; text-transform: uppercase; background-color: #01b3a7; color: #fff; text-decoration: none; font-weight: 700;">
                                {{ 'mails.email_update.title'|trans }}
                            </a>
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="padding: 22px 50px 14px 50px; font-family: 'Helvetica Neue LT Pro', sans-serif; color: #465686; font-size: 12pt; font-weight: 400; letter-spacing:0.4px;">
            {{ 'mails.email_update.disclaimer'|trans }}
        </td>
    </tr>
    <tr>
        <td style="padding: 0px 50px 40px 50px; font-family: 'Helvetica Neue LT Pro', sans-serif; color: #465686; font-size: 12pt; font-weight: 400; letter-spacing:0.4px;">
            {{ 'mails.greetings'|trans|raw }}
        </td>
    </tr>
{% endblock %}