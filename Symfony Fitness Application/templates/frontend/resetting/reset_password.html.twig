{% extends 'layout.html.twig' %}

{% block title %}{{ 'authentication.reset_password.title'|trans }} {{ parent() }} {% endblock %}

{% form_theme form 'shared/form/form_errors.html.twig' %}

{% block content %}
    {{ form_start(form, {'attr': {'class': ''}}) }}
    <h1>{{ 'authentication.reset_password.title'|trans }}</h1>
    <div>
        {{ form_widget(form.password.first, {'attr': {'class': '', 'placeholder': 'Password', 'autocomplete': 'off'}}) }}
        {{ form_errors(form.password.first) }}
    </div>
    <div>
        {{ form_widget(form.password.second, {'attr': {'class': '', 'placeholder': 'Repeat password', 'autocomplete': 'off'}}) }}
        {{ form_errors(form.password.second) }}
    </div>
    <div>
        <button type="submit">
            {{ 'authentication.buttons.submit'|trans }}
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}
