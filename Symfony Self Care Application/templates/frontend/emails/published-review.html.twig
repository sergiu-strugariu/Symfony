{% extends 'layout-email.html.twig' %}

{% block title %}{{ parent() }} {{ pageTitle }}{% endblock %}
{% block content %}
    <tr>
        <td style="padding: 0">
            <img src="{{ absolute_url(asset('assets/frontend/images/email/email_intro_care.webp')) }}"
                 alt="email_intro_care"
                 style="width: 100%; max-width: 650px; height: auto; display: block;"
            />
        </td>
    </tr>
    <tr>
        <td style="text-align: center;padding: 0">
            <h1 style="padding: 50px 0 20px 0; max-width: 530px;"> {{ 'email.published_review.title'|trans }}</h1>
            <p style="max-width: 550px;">{{ 'email.published_review.thank_you'|trans }}</p>
            <p style="padding: 18px 0; display: block;">{{ 'email.published_review.view_review_text'|trans }}</p>
        </td>
    </tr>
    <tr>
        <td style="padding: 18px 50px;">
            <table>
                <tr>
                    <td style="text-align: center; padding: 0; display: block;">
                        <p style="padding: 0; margin: 0; display: block;">
                            <a href="{{ absolute_url(path('app_company_single', {'slug':slug})) }}#reviews-container" target="_blank" style="display: block; height: auto; font-size: 16px; line-height: 1.2; padding: 16px 0; text-transform: uppercase;
                            background-color: #FFBB32; color: #000000; text-decoration: none; font-weight: 700; max-width: 200px;">
                                {{ 'email.published_review.view_review_btn'|trans }}
                            </a>
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="padding: 0 0 50px 0;">
            <p style="max-width: 550px;">{{ 'email.published_review.text_one'|trans }}</p>
            <p style="padding: 18px 0 25px 0; display: block;">{{ 'email.published_review.text_two'|trans }}</p>
            <p>{{ 'email.common.with_respect'|trans }},</p>
            <p>{{ 'email.common.team'|trans }} {{ app_name }}</p>
        </td>
    </tr>
{% endblock %}
