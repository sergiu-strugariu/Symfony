{% extends 'layout-email.html.twig' %}

{% block title %}{{ parent() }} {{ pageTitle }}{% endblock %}
{% block content %}
    <tr>
        <td style="padding: 0">
            <img src="{{ absolute_url(asset('assets/frontend/images/email/email_intro_welcome.webp')) }}" alt="email_intro_welcome" style="width: 100%; max-width: 650px; height: auto; display: block;" />
        </td>
    </tr>
    <tr>
        <td style="text-align: center;padding: 20px 0 0 0;">
            <p style="max-width: 580px; font-size: 18px;">
                {{ 'email.welcome.intro_text'|trans }}
            </p>
        </td>
    </tr>
    <tr>
        <td style="padding: 18px 50px;">
            <table>
                <tr>
                    <td style="text-align: center; padding: 0; display: block;">
                        <p style="padding: 0; margin: 0; display: block;">
                            <a href="{{ absolute_url(path('app_homepage')) }}" target="_blank" style="display: inline-block; height: auto; font-size: 16px; line-height: 1.2; padding: 16px 0; text-transform: uppercase;
                            background-color: #FFBB32; color: #000000; text-decoration: none; font-weight: 700; max-width: 200px;">
                                {{ 'email.common.go_to_website'|trans }}
                            </a>
                        </p>

                    </td>
                </tr>
            </table>
        </td>
    </tr>
{% endblock %}
