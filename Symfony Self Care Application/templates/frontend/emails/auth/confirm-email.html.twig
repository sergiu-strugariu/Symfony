{% extends 'layout-email.html.twig' %}

{% block title %}{{ parent() }} {{ pageTitle }}{% endblock %}
{% block content %}
    <tr>
        <td style="text-align: center;padding: 0">
            <h1 style="padding: 50px 0 20px 0">{{ 'email.common.activate_account_title'|trans }}</h1>
            <p>
                {{ 'email.confirm_email.last_step'|trans }}
            </p>
            <p style="padding: 18px 0; display: block;">
                {{ 'email.common.end_process'|trans }}
            </p>
        </td>
    </tr>
    <tr>
        <td style="padding: 18px 50px;">
            <table>
                <tr>
                    <td style="text-align: center; padding: 0 0 50px 0; display: block;">
                        <p style="padding: 0; margin: 0; display: block;">
                            <a href="{{ url }}" target="_blank" style="display: block; height: auto; font-size: 16px; line-height: 1.2; padding: 16px 0; text-transform: uppercase;
                            background-color: #FFBB32; color: #000000; text-decoration: none; font-weight: 700; max-width: 200px;">
                                {{ 'email.common.activate_account_btn'|trans }}
                            </a>
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
{% endblock %}
