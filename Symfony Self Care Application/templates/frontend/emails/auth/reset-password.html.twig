{% extends 'layout-email.html.twig' %}

{% block title %}{{ parent() }} {{ pageTitle }}{% endblock %}
{% block content %}
    {% set phone = settingService.getService('phone') %}
    {% set email = settingService.getService('email') %}
    <tr>
        <td style="text-align: center;padding: 0">
            <h1 style="padding: 50px 0 20px 0">{{ 'email.reset_password.title'|trans }}</h1>
            <p>
                {{ 'email.reset_password.description'|trans }}
            </p>
            <p style="padding: 18px 0; display: block;">
                {{ 'email.reset_password.follow_text'|trans }}
            </p>
        </td>
    </tr>
    <tr>
        <td style="padding: 18px 50px;">
            <table>
                <tr>
                    <td style="text-align: center; padding: 0; display: block;">
                        <p style="padding: 0; margin: 0; display: block;">
                            <a href="{{ url }}" target="_blank" style="display: block; height: auto; font-size: 16px; line-height: 1.2; padding: 16px 0; text-transform: uppercase;
                            background-color: #FFBB32; color: #000000; text-decoration: none; font-weight: 700; max-width: 200px;">
                                {{ 'email.reset_password.btn'|trans }}
                            </a>
                        </p>

                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="padding: 0 0 50px 0;">
            <p>
                {{ 'email.reset_password.available_link_description'|trans }}
            </p>
            <p style="padding: 18px 0; display: block;"> {{ 'email.reset_password.general_info'|trans }}
                <a href="mailto:{{ email }}" style="text-decoration: underline;display: inline;">{{ email }}</a> {{ 'email.reset_password.or'|trans }}
                <a href="tel:{{ phone }}" style="display: inline; text-decoration: none;">{{ phone }}</a>
            </p>
            <p style="padding: 18px 0; display: block;">{{ 'email.common.thanks_for_using'|trans }} {{ app_name }}!</p>
            <p>{{ 'email.common.with_respect'|trans }},</p>
            <p>{{ 'email.common.team'|trans }} {{ app_name }}</p>
        </td>
    </tr>
{% endblock %}
