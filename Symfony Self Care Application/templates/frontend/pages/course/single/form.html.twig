<div class="form-wrapper has-loader job-details__form">
    <div class="form-title">
        <h2>{{ 'common.apply_here'|trans }}</h2>
    </div>
    <form id="courseSubmitForm" class="not-search">
        <input type="hidden" name="companySlug" value="{{ course.company.slug }}"/>
        <input type="hidden" name="courseName" value="{{ course.translation(locale).title }}"/>
        <div class="row">
            <!--begin::Form message-->
            <div class="form-message"></div>
            <!--end::Form message-->
            <div class="fields">
                <div class="row-half form-item-bg">
                    <label for="name">{{ 'common.filter_name'|trans }}</label>
                    <input type="text"
                           name="name"
                           id="name"
                           value="{{ app.user.name ?? '' }}"
                           placeholder="{{ 'form.placeholder.name'|trans }}"
                    />
                </div>
                <div class="row-half form-item-bg">
                    <label for="surname">{{ 'common.filter_surname'|trans }}</label>
                    <input type="text"
                           name="surname"
                           id="surname"
                           value="{{ app.user.surname ?? '' }}"
                           placeholder="{{ 'form.placeholder.surname'|trans }}"
                    />
                </div>
                <div class="row-half form-item-bg">
                    <label for="email">{{ 'menu.email_link'|trans }}</label>
                    <input type="email"
                           name="emailAddress"
                           id="emailAddress"
                           value="{{ app.user.email ?? '' }}"
                           placeholder="{{ 'form.placeholder.email'|trans }}"
                    />
                </div>
                <div class="row-half form-item-bg">
                    <label for="phone">{{ 'menu.phone_link'|trans }}</label>
                    <input type="tel"
                           name="phone"
                           id="phone"
                           value="{{ app.user.phone ?? '' }}"
                           placeholder="{{ 'form.placeholder.phone'|trans }}"
                    />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="add-review form-item-bg">
                <label for="message">{{ 'form.placeholder.message'|trans }}</label>
                <textarea name="message" id="message"></textarea>
            </div>
            <div class="short-description">
                <p><span>0</span> {{ 'form.placeholder.message_length'|trans }}</p>
            </div>
        </div>

        <div class="privacy-policy">
            <input type="checkbox" id="privacy" name="privacy"/>
            <label for="privacy">
                {{ 'menu.privacy_link'|trans }}.
                <a href="#">{{ 'menu.click_here'|trans }}.</a>
            </label>
        </div>
        <div class="recaptcha">
            <div id="g-recaptcha" class="g-recaptcha recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div>
        </div>
        <div class="form-action">
            <input type="submit" class="submit-btn" value="{{ 'common.form_submit'|trans }}"/>
        </div>
    </form>
    <div class="job-share-section">
        <ul>
            <li>
                {% set category = course.categoryCourses.first %}
                <a href="{{ path('app_courses') }}?category={{ category.slug }}">
                    {{ 'courses.share'|trans }} - {{ category.translation(locale).title }}
                </a>
            </li>
            <!-- start::Share -->
            {% include "frontend/pages/common/share.html.twig" with {'title': course.translation(locale).title, 'summary': course.translation(locale).shortDescription} %}
            <!-- end::Share -->
        </ul>
    </div>
</div>



