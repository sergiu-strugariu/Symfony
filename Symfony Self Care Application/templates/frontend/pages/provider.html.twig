{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} {{ pageTitle }}{% endblock %}
    {% block share %}
        <meta property="og:title" content="{{ provider.name }}"/>
        <meta property="og:description" content="{{ provider.shortDescription }}"/>
        <meta property="og:type" content="website"/>
        <meta property="og:url" content=""/>
        <meta property="og:image" content="{{ asset(app_company_path ~ provider.fileName) }}"/>
        <meta property="og:image:width" content="1200"/>
        <meta property="og:image:height" content="630"/>
    {% endblock %}
{% block content %}
    <main class="home-details home-details-care">
        <div class="home-details__wrapper inner">
            <!-- start::Breadcrumb -->
            {% include "shared/frontend/common/breadcrumbs.html.twig" %}
            <!-- end::Breadcrumb -->

            <!-- start::Intro -->
            {% include "frontend/pages/provider/single/intro.html.twig" %}
            <!-- end::Intro -->

            <!-- start::Content -->
            {% include "frontend/pages/provider/single/content.html.twig" %}
            <!-- end::Content -->

            <!-- start::Recommended services -->
            {% include "frontend/pages/common/recomended-by-category.html.twig" with {'url': path('app_provider_single'), 'categoryName': categoryName} %}
            <!-- end::Recommended services -->
        </div>
    </main>
{% endblock %}