<div id="kt_app_header" class="app-header d-flex flex-column flex-stack">
    <!--begin::Header main-->
    <div class="d-flex flex-stack flex-grow-1 pe-lg-12">
        <div class="app-header-logo d-flex align-items-center ps-lg-17" id="kt_app_header_logo">
            <!--begin::Sidebar toggle-->
            <div id="kt_app_sidebar_toggle"
                 class="app-sidebar-toggle btn btn-sm btn-icon bg-body btn-color-gray-500 btn-active-color-primary w-30px h-30px ms-n2 me-9 d-none d-lg-flex"
                 data-kt-toggle="true" data-kt-toggle-state="active" data-kt-toggle-target="body"
                 data-kt-toggle-name="app-sidebar-minimize">
                <div class="custom-menu"><span></span></div>
            </div>
            <!--end::Sidebar toggle-->
            <!--begin::Sidebar mobile toggle-->
            <div class="btn btn-icon btn-active-color-primary w-35px h-35px ms-3 me-2 d-flex d-lg-none"
                 id="kt_app_sidebar_mobile_toggle">
                <div class="custom-menu"><span></span></div>
            </div>
            <!--end::Sidebar mobile toggle-->
            <!--begin::Logo-->
            <a href="{{ path('dashboard_index') }}" class="app-sidebar-logo">
                <img alt="Logo" src="{{ asset('assets/dashboard/media/logos/logo.png') }}" class="theme-light-show"/>
            </a>
            <!--end::Logo-->
        </div>
        <!--begin::Navbar-->
        <div class="app-navbar flex-grow-1 justify-content-end" id="kt_app_header_navbar"></div>
        <!--end::Navbar-->
        <!--begin::User menu-->
        <div class="app-navbar-item ms-2 ms-lg-6" id="kt_header_user_menu_toggle">
            <!--begin::Menu wrapper-->
            <div class="cursor-pointer symbol symbol-circle symbol-30px symbol-lg-65px"
                 data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-attach="parent"
                 data-kt-menu-placement="bottom-end">
                <img src="{{ asset(app.user.profilePicture ? app_user_path ~ app.user.profilePicture : 'assets/dashboard/media/avatars/blank.png') }}"
                     alt="Logo"
                     class="image-change"
                />
            </div>
            <!--begin::User account menu-->
            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-color fw-semibold py-4 fs-6 w-275px"
                 data-kt-menu="true">
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <div class="menu-content d-flex align-items-center px-3">
                        <!--begin::Avatar-->
                        <div class="symbol symbol-50px me-5">
                            <img src="{{ asset(app.user.profilePicture ? app_user_path ~ app.user.profilePicture : 'assets/dashboard/media/avatars/blank.png') }}"
                                class="image-change"
                                 alt="Logo"
                            />
                        </div>
                        <!--end::Avatar-->
                        <!--begin::Username-->
                        <div class="d-flex flex-column">
                            <div class="fw-bold d-flex align-items-center fs-5">
                               <span class="current-user-name">{{ app.user.name }}</span>&nbsp;<span class="current-user-surname">{{ app.user.surname }}</span>
                            </div>
                            <a href="#" class="fw-semibold text-muted text-hover-primary fs-7">
                                {{ app.user.email }}
                            </a>
                        </div>
                        <!--end::Username-->
                    </div>
                </div>
                <!--end::Menu item-->
            </div>
            <!--end::User account menu-->
            <!--end::Menu wrapper-->
        </div>
        <!--end::User menu-->
        <!--begin::Action-->
        <div class="app-navbar-item ms-2 ms-lg-7 me-lg-6">
            <!--begin::Link-->
            <a href="{{ path('dashboard_logout') }}"
               class="btn btn-icon btn-custom btn-color-gray-600 btn-active-color-primary w-35px h-35px w-md-40px h-md-40px">
                <img src="{{ asset('assets/dashboard/media/dashboard/log-out.svg') }}" width="28" alt="log-out">
            </a>
            <!--end::Link-->
        </div>
        <!--end::Action-->
    </div>
    <!--end::Header main-->
    <!--begin::Separator-->
    <div class="app-header-separator"></div>
    <!--end::Separator-->
</div>
