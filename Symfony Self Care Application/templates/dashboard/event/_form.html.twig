<div class="card mb-5 mb-lg-3 card-flush">
    <!--begin::Form content-->
    {{ form_start(form, {'attr': {'class': 'form', 'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}
    <!--begin::Card body-->
    <div class="card-body p-9 pb-lg-0">
        <div class="row">
            <div class="col-lg-12">
                <!--start::title & startDate-->
                <div class="row mb-6">
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.title, 'dashboard.table.title'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                                {{ form_errors(form.title) }}
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.startDate, 'common.start_date'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.startDate, {'attr': {'class': 'flatpickr-init form-control form-control-solid form-control-lg rounded-0'}}) }}
                                {{ form_errors(form.startDate) }}
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                </div>
                <!--end::title & startDate-->

                <!--start::address-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.address, 'dashboard.form.address'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.address, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.address) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::address-->

                <!--start::county & city-->
                <div class="row mb-6">
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.county, 'dashboard.form.county'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.county, {'attr': {'class': 'counties form-select form-select-solid form-select-lg rounded-0', 'data-control': 'select2', 'data-placeholder': 'common.select'|trans}}) }}
                                {{ form_errors(form.county) }}
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.city, 'dashboard.form.county'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.city, {'attr': {'class': 'cities form-select form-select-solid form-select-lg rounded-0', 'data-control': 'select2', 'data-placeholder': 'common.select'|trans}}) }}
                                {{ form_errors(form.city) }}
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                </div>
                <!--end::county & city-->

                <!--start::eventPartnerSponsors-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.eventPartnerSponsors, 'dashboard.form.partner_sponsors'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.eventPartnerSponsors, {'attr': {'class': 'iconSelect2 form-select form-select-solid form-select-lg rounded-0'}}) }}
                        {{ form_errors(form.eventPartnerSponsors) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::eventPartnerSponsors-->

                <!--start::eventPartnerMedia-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.eventPartnerMedia, 'dashboard.form.partner_media'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.eventPartnerMedia, {'attr': {'class': 'iconSelect2 form-select form-select-solid form-select-lg rounded-0'}}) }}
                        {{ form_errors(form.eventPartnerMedia) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::eventPartnerMedia-->

                <!--start::eventSpeakers-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.eventSpeakers, 'dashboard.form.speakers'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.eventSpeakers, {'attr': {'class': 'iconSelect2 form-select form-select-solid form-select-lg rounded-0'}}) }}
                        {{ form_errors(form.eventSpeakers) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::eventSpeakers-->

                <!--start::shortDescription-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.shortDescription, 'dashboard.form.short_description'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0 shortDescription', 'rows': '3'}}) }}
                        {{ form_errors(form.shortDescription) }}
                        <p class="character-counter"><span>0</span>  {{'dashboard.common.short_description_message_length'|trans}}</p>
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::shortDescription-->

                <!--start::description-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.description, 'dashboard.form.description'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0 tinymce-editor', 'rows': '6'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::description-->

                <!--start::filePreview and logo-->
                <div class="row mb-6">
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.fileName, 'dashboard.form.preview_image'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.fileName, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                                {{ form_errors(form.fileName) }}

                                {% if fileName is defined %}
                                    <div class="form-text">Image uploaded:
                                        <a href="{{ asset(app_event_path ~ fileName, 'cloudflare') }}" target="_blank">
                                            {{ fileName }}
                                        </a>
                                    </div>
                                {% endif %}
                                <div class="form-text">{{ 'dashboard.form.image_format'|trans }}</div>
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.programFileName, 'dashboard.form.file'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.programFileName, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                                {{ form_errors(form.programFileName) }}
                                {% if programFileName is defined %}
                                    <div class="form-text">File uploaded:
                                        <a href="{{ asset(app_event_path ~ programFileName, 'cloudflare') }}"
                                           target="_blank">
                                            {{ programFileName }}
                                        </a>
                                    </div>
                                {% endif %}
                                <div class="form-text">{{ 'dashboard.form.pdf_format'|trans }}</div>
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                </div>
                <!--end::filePreview and logo-->

                <!--start::videoUrl and placeholderImage-->
                <div class="row mb-6">
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.videoUrl, 'dashboard.form.video_url'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.videoUrl, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                                {{ form_errors(form.videoUrl) }}
                                <div class="form-text">Ex: https://www.youtube.com/embed/...</div>
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <!--begin::Label-->
                            {{ form_label(form.videoPlaceholder, 'dashboard.form.video_placeholder'|trans, {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}}) }}
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                {{ form_widget(form.videoPlaceholder, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                                {{ form_errors(form.videoPlaceholder) }}
                                {% if videoPlaceholder is defined %}
                                    <div class="form-text">{{ 'dashboard.form.image_upload'|trans }}
                                        <a href="{{ asset(app_event_path ~ videoPlaceholder, 'cloudflare') }}"
                                           target="_blank">
                                            {{ videoPlaceholder }}
                                        </a>
                                    </div>
                                {% endif %}
                                <div class="form-text">{{ 'dashboard.form.image_format'|trans }}</div>
                            </div>
                            <!--end::Col-->
                        </div>
                    </div>
                </div>
                <!--end::videoUrl and placeholderImage-->

                <!--start::GalleryImages-->
                {% if uuid is defined %}
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6 required">
                            {{ 'dashboard.form.gallery_intro_images'|trans }}
                        </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-10 fv-row">
                            <button type="button" class="btn btn-brand btn-primary rounded-0 bg-1B3951 text-uppercase fw-bolder" data-bs-toggle="modal" data-bs-target="#kt_gallery_intro_modal">
                                {{ 'dashboard.form.upload_image'|trans }}
                            </button>
                            <div class="form-text"> {{ 'dashboard.form.gallery_images'|trans }}</div>
                        </div>
                        <!--end::Col-->
                    </div>
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6 required">
                            {{ 'dashboard.form.gallery_images'|trans }}
                        </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-10 fv-row">
                            <button type="button" class="btn btn-brand btn-primary rounded-0 bg-1B3951 text-uppercase fw-bolder" data-bs-toggle="modal" data-bs-target="#kt_gallery_modal">
                                {{ 'dashboard.form.upload_image'|trans }}
                            </button>
                            <div class="form-text"> {{ 'dashboard.form.gallery_images'|trans }}</div>
                        </div>
                        <!--end::Col-->
                    </div>
                {% endif %}
                <!--end::GalleryImages-->

                <!--start::eventStatus-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.eventStatus, 'dashboard.table.status_event'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.eventStatus, {'attr': {'class': 'event-status form-select form-select-solid form-select-lg rounded-0',  'data-control': 'select2', 'data-placeholder': 'common.select'|trans}}) }}
                        {{ form_errors(form.eventStatus) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::eventStatus-->

                <!--start::eventSpeakers-->
                <div class="row mb-6 event-winners">
                    <!--begin::Label-->
                    {{ form_label(form.eventWinners, 'dashboard.table.winners'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.eventWinners, {'attr': {'class': 'winnerSelect2 form-select form-select-solid form-select-lg rounded-0'}}) }}
                        {{ form_errors(form.eventWinners) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::eventSpeakers-->

                <!--start::enabled-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.status, 'dashboard.table.status'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.status, {'attr': {'class': 'form-select form-select-solid form-select-lg rounded-0',  'data-control': 'select2', 'data-placeholder': 'common.select'|trans}}) }}
                        {{ form_errors(form.status) }}
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::enabled-->
            </div>
        </div>
    </div>
    <!--end::Card body-->
    <!--begin::Card footer-->
    <div class="card-footer py-6 pt-lg-0 border-top-0 pb-lg-9 px-9">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-end">
                    {{ form_widget(form._token) }}
                    <a href="{{ path('dashboard_event_index') }}" class="btn text-uppercase fw-bolder">
                        {{ 'dashboard.form.cancel'|trans }}
                    </a>
                    <button type="submit"
                            class="btn btn-brand btn-primary rounded-0 bg-1B3951 text-uppercase fw-bolder">
                        {{ 'dashboard.form.submit'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!--end::Card footer-->
    {{ form_end(form) }}
    <!--end::Form content-->
</div>
