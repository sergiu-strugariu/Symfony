<div class="card mb-5 mb-lg-3 card-flush">
    <!--begin::Form content-->
    {{ form_start(form, {'attr': {'class': 'form', 'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}
    <!--begin::Card body-->
    <div class="card-body p-9 pb-lg-0">
        <div class="row">
            <div class="col-lg-12">
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.name, 'dashboard.table.name'|trans , {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.surname, 'common.filter_surname'|trans , {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.surname, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.surname) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.role, 'dashboard.form.role'|trans , {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.role, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.role) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.company, 'dashboard.form.companyName'|trans , {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.company, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.company) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.twitter, 'common.social_link_twitter'|trans , {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.twitter, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.twitter) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.linkedin, 'common.social_link_linkedin'|trans , {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.linkedin, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.linkedin) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.facebook, 'common.social_link_facebook'|trans , {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.facebook, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.facebook) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.status, 'dashboard.table.status'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.status, {'attr': {'class': 'form-select form-select-solid form-select-lg rounded-0',  'data-control': 'select2', 'data-placeholder': 'common.select'|trans}}) }}
                        {{ form_errors(form.status) }}
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row mb-6">
                    <!--begin::Label-->
                    {{ form_label(form.fileName, 'dashboard.form.image'|trans, {'label_attr': {'class': 'col-lg-2 col-form-label fw-semibold fs-6'}}) }}
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-10 fv-row">
                        {{ form_widget(form.fileName, {'attr': {'class': 'form-control form-control-solid form-control-lg rounded-0'}}) }}
                        {{ form_errors(form.fileName) }}
                        {% if fileName is defined %}
                            <div class="form-text">{{ 'dashboard.form.image_uploaded'|trans }}:
                                <a href="{{ asset(app_event_speaker_path ~ fileName, 'cloudflare') }}" target="_blank">
                                    {{ fileName }}
                                </a>
                            </div>
                        {% endif %}
                        <div class="form-text">{{ 'dashboard.form.image_format'|trans }}</div>
                    </div>
                    <!--end::Col-->
                </div>
            </div>
        </div>
    </div>
    <!--end::Card body-->
    <!--begin::Card footer-->
    <div class="card-footer py-6 pt-lg-0 border-top-0 pb-lg-9 px-9">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-end">
                    {{ form_widget(form._token) }}
                    <a href="{{ path('dashboard_speaker_index') }}" class="btn text-uppercase fw-bolder">
                        {{ 'dashboard.form.cancel'|trans }}
                    </a>
                    <button type="submit" class="btn btn-brand btn-primary rounded-0 bg-1B3951 text-uppercase fw-bolder">
                        {{ 'dashboard.form.submit'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!--end::Card footer-->
    {{ form_end(form) }}
    <!--end::Form content-->
</div>
