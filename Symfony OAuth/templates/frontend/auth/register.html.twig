{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}

    <section class="bg-white">
        <div class="w-full mx-auto max-w-xl flex flex-col justify-center py-24 mt-4 relative p-8">

            <div class="mt-6">
                <div class="w-full divide-neutral-200 rounded-3xl bg-white shadow-2xl border p-8 lg:p-10">
                    {{ form_start(registrationForm) }}
                    <div class="prose text-gray-500 prose-sm prose-headings:font-normal prose-headings:text-xl">
                        <div>
                            <h1>Register form with password validation</h1>
                            <p class="text-balance">
                                Fill in the form below to register your account, and you will see
                                the inputs validation in action.
                            </p>
                        </div>
                    </div>
                    <div class="mt-4">
                        {{ form_label(registrationForm.firstName, 'First Name') }}
                        {{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'John', 'class': 'block w-full h-12 px-4 py-3 placeholder-gray-500 bg-gray-100 border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-inset focus:ring-2 text-xs'}}) }}
                        <div class="py-2 space-y-3">
                            <p class="text-red-500 text-xs mt-1">
                                {{ form_errors(registrationForm.firstName) }}
                            </p>
                        </div>
                    </div>

                    <div>
                        {{ form_label(registrationForm.lastName, 'Last Name') }}
                        {{ form_widget(registrationForm.lastName, {'attr': {'placeholder': 'Cena', 'class': 'block w-full h-12 px-4 py-3 placeholder-gray-500 bg-gray-100 border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-inset focus:ring-2 text-xs'}}) }}
                        <div class="py-2 space-y-3">
                            <p class="text-red-500 text-xs mt-1">
                                {{ form_errors(registrationForm.lastName) }}
                            </p>
                        </div>
                    </div>

                    <div>
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'example@email.com', 'class': 'block w-full h-12 px-4 py-3 placeholder-gray-500 bg-gray-100 border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-inset focus:ring-2 text-xs'}}) }}
                        <div class="py-2 space-y-3">
                            <p class="text-red-500 text-xs mt-1">
                                {{ form_errors(registrationForm.email) }}
                            </p>
                        </div>
                    </div>

                    <div>
                        {{ form_label(registrationForm.plainPassword) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': '*******', 'class': 'block w-full h-12 px-4 py-3 placeholder-gray-500 bg-gray-100 border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-2 focus:ring-inset text-xs'}}) }}
                        <div class="py-2 space-y-3">
                            <p class="text-red-500 text-xs mt-1">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </p>
                        </div>
                        <p class="text-gray-500 text-xs mt-1 lg:text-pretty">
                            Password must contain at least one capital letter and a special
                            character.
                        </p>
                    </div>

                    <div class="mt-4">
                        <button type="submit"
                                class="rounded-full bg-blue-600 px-8 py-2 h-12 text-sm font-semibold text-white hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 w-full">
                            Register
                        </button>
                    </div>

                    {{ form_end(registrationForm) }}

                    <div class="mt-4">
                        <div class="flex justify-between items-center">
                            <div>
                                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="25" height="25" viewBox="0 0 48 48">
                                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path><path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path><path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path><path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
                                    </svg>
                                </a>
                            </div>
                            <div>
                                <a href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="25" height="25" viewBox="0 0 48 48">
                                        <path fill="#039be5" d="M24 5A19 19 0 1 0 24 43A19 19 0 1 0 24 5Z"></path><path fill="#fff" d="M26.572,29.036h4.917l0.772-4.995h-5.69v-2.73c0-2.075,0.678-3.915,2.619-3.915h3.119v-4.359c-0.548-0.074-1.707-0.236-3.897-0.236c-4.573,0-7.254,2.415-7.254,7.917v3.323h-4.701v4.995h4.701v13.729C22.089,42.905,23.032,43,24,43c0.875,0,1.729-0.08,2.572-0.194V29.036z"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
